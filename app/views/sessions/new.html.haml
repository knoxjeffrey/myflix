%section.sign_in.container
  .row
    .col-sm-10.col-sm-offset-1
      = form_tag '/sign_in' do 
        %header
          %h1 Sign in
        %fieldset
          .form-group
            = label_tag :email_address, "Email Address"
            .row
              .col-sm-4
                = text_field_tag :email_address, nil, class: "form-control"
          .form-group
            = label_tag :password, "Password"
            .row
              .col-sm-4
                = password_field_tag :password, nil, class: "form-control"
        %fieldset.form-group.action
          = submit_tag "Sign In", class: "btn btn-default"