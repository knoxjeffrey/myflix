%section.register.container
  .row
    .col-sm-10.col-sm-offset-1.form-horizontal
      = horizontal_form_for @user do |f|
        %header
          %h1 Register
        %fieldset
          .form-group
            .control-label.col-sm-2
              = f.label :email_address, "Email Address"
            .col-sm-6
              = f.text_field :email_address, class: "form-control stop-autofill"

          .form-group
            .control-label.col-sm-2
              = f.label :password
            .col-sm-6
              = f.password_field :password, class: "form-control"
        
          .form-group
            .control-label.col-sm-2
              = f.label :full_name, "Full Name"
            .col-sm-6
              = f.text_field :full_name, class: "form-control"
              
          = hidden_field_tag :invitation_token, @invitation_token
        
        %fieldset.actions.control-group.col-sm-offset-2
          .controls
            %script.stripe-button{"data-amount" => "999", "data-currency" => "gbp", "data-description" => "Movies At Any Time!", "data-key" => "#{ENV['STRIPE_PUBLISHABLE_KEY']}", "data-name" => "MyFLiX", "data-label" => "Pay And Sign Up", :src => "https://checkout.stripe.com/checkout.js"}
            = f.submit "Sign Up", class: "btn btn-default"